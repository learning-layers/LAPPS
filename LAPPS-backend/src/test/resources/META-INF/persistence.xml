<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
   <persistence-unit name="lappsPU" transaction-type="RESOURCE_LOCAL">
      <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
      <class>de.rwth.dbis.layers.lapps.entity.UserEntity</class>
      <class>de.rwth.dbis.layers.lapps.entity.AppCommentEntity</class>
      <class>de.rwth.dbis.layers.lapps.entity.AppEntity</class>
      <class>de.rwth.dbis.layers.lapps.entity.AppTagEntity</class>
      <class>de.rwth.dbis.layers.lapps.entity.AppInstanceEntity</class>
      <class>de.rwth.dbis.layers.lapps.entity.AppPlatformEntity</class>
      <class>de.rwth.dbis.layers.lapps.entity.AppArtifactEntity</class>
      <class>de.rwth.dbis.layers.lapps.entity.ArtifactTypeEntity</class>
      <class>de.rwth.dbis.layers.lapps.entity.AppDetailEntity</class>
      <class>de.rwth.dbis.layers.lapps.entity.AppDetailTypeEntity</class>
      <properties>
        <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		<property name="javax.persistence.jdbc.user" value="${jdbc.username}"/>
		<property name="javax.persistence.jdbc.password" value="${jdbc.password}"/>
		<property name="javax.persistence.jdbc.url" value="${jdbc.url}"/>
		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

        <property name="hibernate.connection.provider_class"
          value="org.hibernate.connection.C3P0ConnectionProvider" />
         
        <property name="hibernate.c3p0.min_size" value="5" />
		<property name="hibernate.c3p0.max_size" value="20" />
		<property name="hibernate.c3p0.timeout" value="300" />
		<property name="hibernate.c3p0.max_statements" value="50" />
		<property name="hibernate.c3p0.idle_test_period" value="3000" />
      </properties>
   </persistence-unit>
</persistence>
